arr = [5, 1, 4, 2, 8, 0, 2]

swapped = True
start = 0
end = len(arr) - 1

while swapped:
    swapped = False
    for i in range(start, end):
        if arr[i] > arr[i + 1]:
            arr[i], arr[i + 1] = arr[i + 1], arr[i]
            swapped = True

    if not swapped:
        break

    swapped = False
    end -= 1

    for i in range(end - 1, start - 1, -1):
        if arr[i] > arr[i + 1]:
            arr[i], arr[i + 1] = arr[i + 1], arr[i]
            swapped = True

    start += 1

print("Cocktail Shaker Sort:", arr)
